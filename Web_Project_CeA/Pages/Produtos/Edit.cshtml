@page
@model Web_Project_CeA.Pages.Produtos.EditModel
@{
}

<main>
    <div class="breadcrumb">
        <a asp-page="/Produtos/Index"><span>Home</span></a>
        <span>>></span>
        <a asp-page="/Produtos/Detail" asp-route-id="@Model.Produto.Id"><span>Detalhe do produto</span></a>
        <span>>></span>
        <span>Editar produto</span>
    </div>
    <form class="form-auth" method="post">
        <input type="hidden" asp-for="Produto.Id" />
        <section class="container-produto">
            <div class="produto-info">
                <div class="img-produto">
                    <img src="@Html.DisplayFor(model=> Model.Produto.imagem)" alt="Imagem do produto @Html.DisplayFor(model => Model.Produto.nome)">
                    <div class="input-nova-img">
                        <label asp-for="Produto.imagem">Alterar foto do produto</label>
                        <input type="text" asp-for="Produto.imagem" name="imagem" placeholder="URL da imagem">
                        <span class="error-message"></span>
                    </div>
                    <div class="btn-details editar">
                        <input type="submit" value="salvar alterações" class="btn secondary" />
                    </div>
                </div>
                <div class="produto">

                    <div class="produto-details">
                        <input asp-for="Produto.nome" name="nome" />
                        <span class="error-message"></span>
                        <textarea asp-for="Produto.descricao" name="descricao" id="produto-descricao" rows="5"></textarea>
                        <span class="error-message"></span>
                    </div>
                    <div class="departamento-categoria">
                        <div class="departamento-info">
                            <label asp-for="Produto.divisao" >Departamento</label>
                            <select asp-for="Produto.divisao" id="departamento">
                                <option value="feminino">Feminino</option>
                                <option value="masculino">Masculino</option>
                                <option value="infantil">Infantil</option>
                                <option value="plus-size">Plus Size</option>
                            </select>
                        </div>
                        <div class="categoria-info">
                            <label asp-for="Produto.categoria">Categoria</label>
                            <select asp-for="Produto.categoria" id="categoria">
                                <option value="top">Top</option>
                                <option value="bottom">Bottom</option>
                                <option value="inteiro">Inteiro</option>
                            </select>
                        </div>
                    </div>
                    <div class="estoque">
                        <h3>estoque</h3>
                        <div class="container-estoque">
                            <div class="container-tamanhos">
                                <label asp-for="Produto.tamanho">Tamanhos</label>
                                <input class="input-estoque" type="text" name="tamanho" asp-for="Produto.tamanho">
                                <span class="error-message"></span>
                            </div>
                            <div class="container-quantidade">
                                <label asp-for="Produto.estoque">Quantidade</label>
                                <input asp-for="Produto.estoque" class="input-estoque" name="estoque" type="text">
                                <span class="error-message"></span>
                            </div>
                        </div>
                    </div>
                    <div class="conatiner-fornecedor">
                        <label asp-for="Produto.fornecedor">Fornecedor</label>
                        <input asp-for="Produto.fornecedor" class="input-fornecedor" name="fornecedor" type="text">
                        <span class="error-message"></span>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="movimentacoes">
                <h3>histórico de movimentações</h3>
                <table class="content-table">
                    <thead>
                        <tr>
                            <th>Data/hora</th>
                            <th>Usuário</th>
                            <th>Entrada</th>
                            <th>Saída</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input asp-for="Produto.reg_alt" class="input-table" type="datetime">
                            </td>
                            <td>
                                <select class="input-table" name="usuario" id="usuario-td">
                                    <option value="top">Beatriz Medina</option>
                                    <option value="bottom">Bruno Lopes</option>
                                    <option value="inteiro">David Oliveira</option>
                                    <option value="inteiro">Gustavo Watanabe</option>
                                    <option value="inteiro">Neilyane Silva</option>
                                    <option value="inteiro">Thiago Vieira</option>
                                </select>
                            </td>
                            <td>
                                <input class="input-table" type="text" placeholder="1200">
                            </td>
                            <td>
                                <input class="input-table" type="text" placeholder="-">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </form>
</main>